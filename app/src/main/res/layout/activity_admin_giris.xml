<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminGiris"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adminIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/ic_baseline_admin"
        android:layout_gravity="center"
        android:layout_marginTop="70dp">
    </ImageView>

    <EditText
        android:id="@+id/adminMail"
        android:layout_width="237dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_duzenleme"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:ems="10"
        android:hint="E-Mail"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/adminSifre"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_duzenleme"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:ems="10"
        android:hint="Şifre"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:inputType="textPassword"
        android:padding="10dp"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="345dp" />

    <Button
        android:id="@+id/giris"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/buton_kenar"
        android:backgroundTint="@color/kirmizi"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:text="Giriş Yap"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/unuttum"
        android:layout_width="115dp"
        android:layout_height="21dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:text="@string/unuttum"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="643dp"></TextView>

</LinearLayout>