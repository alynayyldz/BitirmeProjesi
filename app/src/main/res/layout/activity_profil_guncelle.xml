<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilGuncelle"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape">

        <ImageButton
            android:id="@+id/btnGeri"
            android:layout_width="32dp"
            android:layout_height="48dp"
            android:background="@null"
            android:padding="15dp"
            android:src="@drawable/ic_baseline_back_arrow"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fredoka"
            android:padding="8dp"
            android:text="@string/guncelle"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"></TextView>
    </RelativeLayout>


    <EditText
        android:id="@+id/isim"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/edit_duzenleme"
        android:hint="Ad Soyad"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:paddingLeft="20dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/numara"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_duzenleme"
        android:hint="Telefon Numarası"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isim" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_duzenleme"
        android:hint="E-mail"
        android:paddingLeft="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/fredoka"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numara" />

    <Button
        android:id="@+id/btnGuncelle"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/buton"
        android:fontFamily="@font/fredoka"
        android:text="Bilgileri Güncelle"
        android:textColor="@color/white"
        android:textStyle="bold" />


</LinearLayout>